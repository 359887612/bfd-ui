        li
          a(href='#') Messages
  .row
    .col-md-8
      h1 Modal
      .modal(style='position:relative;top:auto;right:auto;bottom:auto;left:auto;z-index:1;display:block;background-color:#666;')
        .modal-dialog
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') ×
              h4.modal-title Modal title
            .modal-body
              p One fine body…
            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') Close
              button.btn.btn-primary(type='button') Save changes
