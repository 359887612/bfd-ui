            td @twitter
  .row
    .col-md-2
      h1 Nav stacked
      ul.nav.nav-pills.nav-stacked
        li.open.active
          a(href='')
            span.glyphicon.glyphicon-align-left
            |             Home
            span.toggle.glyphicon.glyphicon-menu-right
          ul.nav.nav-pills.nav-stacked
            li.open.active
              a(href='#')
                | Home
                span.toggle.glyphicon.glyphicon-menu-right
              ul.nav.nav-pills.nav-stacked
                li
                  a(href='#') Home
                li.active
                  a(href='#') Profile
                li
                  a(href='#') Messages
            li
              a(href='#') Profile
            li
