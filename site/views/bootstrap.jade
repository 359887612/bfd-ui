.container-fluid
  .row
    .col-md-12
      h1 Buttons
      button.btn.btn-default(type='button')
        span.glyphicon.glyphicon-align-left
      a.btn.btn-default(href='') （默认样式）Default
      button.btn.btn-primary(type='button') （首选项）Primary
      .btn-group
        button.btn.btn-default.btn-xs(type='button') 昨天
        button.btn.btn-default.btn-xs(type='button') 最近7天
        button.btn.btn-default.btn-xs.active(type='button') 最近30天
  .row
    .col-md-6
      h1 Tables
      table.table
        thead
          tr
            th First Name
            th Last Name
            th Username
        tbody
          tr
            td Mark
            td Otto
            td
              span.glyphicon.glyphicon-align-left
          tr
            td Jacob
            td Thornton
            td @fat
          tr
            td Larry
